# Puerto del servidor
PORT=3001

# Configuración de Redis (opcional)
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379

# Límites de carga
MAX_FILE_SIZE=100000000  # 100MB
CHUNK_RETENTION_MINUTES=60
FILE_RETENTION_DAYS=30

# Tipos de archivos permitidos (separados por comas)
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/gif,video/mp4,application/pdf

# Rate limiting
UPLOAD_RATE_LIMIT_POINTS=100
UPLOAD_RATE_LIMIT_DURATION=60

# Rutas de almacenamiento (opcionales, tienen valores predeterminados)
