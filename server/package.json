{
  "name": "upload-system-server",
  "version": "1.0.0",
  "description": "Servidor para sistema de carga de archivos",
  "main": "src/index.ts",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "test": "mocha -r ts-node/register 'tests/**/*.test.ts'",
    "test:unit": "mocha -r ts-node/register 'tests/unit/**/*.test.ts'",
    "test:e2e": "mocha -r ts-node/register 'tests/e2e/**/*.test.ts' --timeout 30000",
    "test:stress": "artillery run tests/stress/artillery-config.yml",
    "test:coverage": "nyc --reporter=html --reporter=text npm test"
  },
  "keywords": [
    "upload",
    "chunked",
    "file",
    "server"
  ],
  "author": "Guillermo Sierra",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-rate-limit": "^6.3.0",
    "file-type": "^17.1.1",
    "ioredis": "^5.0.1",
    "md5-file": "^5.0.0",
    "morgan": "^1.10.0",
    "multer": "^1.4.4",
    "rate-limiter-flexible": "^2.3.7",
    "redis": "^4.0.6",
    "winston": "^3.6.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.1",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.1.0",
    "@types/morgan": "^1.9.3",
    "@types/multer": "^1.4.7",
    "@types/node": "^17.0.23",
    "@types/sinon": "^10.0.11",
    "@types/supertest": "^2.0.12",
    "artillery": "^2.0.0-12",
    "chai": "^4.3.6",
    "form-data": "^4.0.0",
    "mocha": "^9.2.2",
    "nodemon": "^2.0.15",
    "nyc": "^15.1.0",
    "sinon": "^13.0.1",
    "supertest": "^6.2.3",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  }
}
